<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="jp.oist.abcvlib.pidtransfer_transmitter.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:name="jp.oist.abcvlib.pidtransfer_transmitter.PID_GUI"
        android:id="@+id/main_fragment"
        tools:layout="@layout/fragment_pid_gui"/>

    <Button
        android:id="@+id/show_qr_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="@string/qr_button_show" />

</LinearLayout>